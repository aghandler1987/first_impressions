function bt_core_is_bobbi_user(){
  global $user;
  
  if(user_is_anonymous()){
    return FALSE;
  }
  
  if(bt_core_is_admin()){
    return TRUE;
  }
  
  return in_array('bobbie user', $user->roles);
}

function bt_core_is_admin(){
  global $user; 
  
  if(user_is_anonymous()){
    return FALSE;
  }
  
  return in_array('administrator', $user->roles);
}

